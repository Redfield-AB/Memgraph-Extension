<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE knimeNode PUBLIC "-//UNIKN//DTD KNIME Node 2.0//EN" "http://www.knime.org/Node.dtd">
<knimeNode icon="/icons/connector.png" type="Source">
	<name>Memgraph Connection</name>
	<shortDescription>
		Memgraph Connection
	</shortDescription>

	<fullDescription>
		<intro>
			Node creates connection to a Memgraph instance via BOLT protocol.
		</intro>
		<option name="Memgraph URL">the hostname or URL of Memgraph server with port.</option>
		<option name="Max connection pool size">defines the maximum amount of connections.</option>
		<option name="Use database name">use default (memgraph) graph for connection or provide a graph name.</option>
		<option name="Database name">the name of the database you want to connect to.</option>
		<option name="Use authentication">checkbox that activates/deactivates authentication.</option>
		<option name="Username and password">credentials for authentication.</option>
	</fullDescription>

	<ports>
		<outPort index="0" name="Memgraph connection">Memgraph connection</outPort>
	</ports>
</knimeNode>